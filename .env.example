# AWS Configuration
REACT_APP_AWS_REGION=ap-northeast-2
REACT_APP_AWS_ACCESS_KEY_ID=your-access-key-id
REACT_APP_AWS_SECRET_ACCESS_KEY=your-secret-access-key

# Amazon Cognito Configuration
REACT_APP_COGNITO_USER_POOL_ID=your-user-pool-id
REACT_APP_COGNITO_CLIENT_ID=your-client-id
REACT_APP_COGNITO_REGION=ap-northeast-2

# Amazon S3 Configuration
REACT_APP_S3_BUCKET=your-s3-bucket-name
REACT_APP_S3_REGION=ap-northeast-2

# Amazon DynamoDB Configuration
REACT_APP_DYNAMODB_TABLE=DemoFactoryContents
REACT_APP_DYNAMODB_REGION=ap-northeast-2

# Amazon Bedrock Configuration
REACT_APP_BEDROCK_REGION=us-east-1
REACT_APP_BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0

# Application Configuration
REACT_APP_API_BASE_URL=http://localhost:3000
REACT_APP_PDF_SERVER_URL=http://localhost:5000
REACT_APP_BEDROCK_SERVER_URL=http://localhost:8000

# Development Configuration
NODE_ENV=development
PORT=3000
GENERATE_SOURCEMAP=true

# Python PDF Server Configuration
PDF_SERVER_PORT=5000
PDF_SERVER_HOST=localhost

# Bedrock API Server Configuration
BEDROCK_SERVER_PORT=8000
BEDROCK_SERVER_HOST=localhost

# Security Configuration
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_DEBUG_MODE=false

# Optional: Email Configuration (for SES)
REACT_APP_SES_REGION=ap-northeast-2
REACT_APP_FROM_EMAIL=noreply@your-domain.com

# Optional: CloudFront Configuration
REACT_APP_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net
